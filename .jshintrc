{
  // Environment options
  "browser": true,
  "jquery": true,
  "node": true, // To lint Gruntfile.js
  "globals": {
    "_": false,
    "Backbone": false,
    "JST": false
  },

  // Enforcing options
  "bitwise": true,
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "noempty": true,
  "quotmark": "single",
  "undef": true,
  "unused": true,
  "strict": true,

  // Relaxing options
  "esnext": true
}
